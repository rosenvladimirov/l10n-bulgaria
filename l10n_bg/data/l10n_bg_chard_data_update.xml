<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!-- Chart template update -->
        <record id="bg_chart_template" model="account.chart.template">
            <field name="bank_account_code_prefix">503.000</field>
            <field name="cash_account_code_prefix">501.000</field>

            <!-- Define receivable/payable accounts. -->
            <field name="property_account_receivable_id" ref="bg_pcg_recv"/> <!-- 4111 -->
            <field name="property_account_payable_id" ref="bg_pcg_pay"/> <!-- 4011 -->

            <!-- Define categories of expense/income account. -->
            <field name="property_account_expense_categ_id" ref="bg_pcg_expense"/> <!-- 601 -->
            <field name="property_account_income_categ_id" ref="pcg_709"/> <!-- 701 -->

            <!-- Define loss/gain exchange rate accounts. -->
            <field name="income_currency_exchange_account_id" ref="pcg_724"/>
            <field name="expense_currency_exchange_account_id" ref="pcg_624"/>

            <!-- Define input/output accounts for stock valuation. -->
            <field name="property_stock_account_input_categ_id" ref="pcg_3011"/>
            <field name="property_stock_account_output_categ_id" ref="pcg_709"/>

            <!-- Define an account template for stock valuation. -->
            <field name="property_stock_valuation_account_id" ref="pcg_302"/>

        </record>
    </data>
</odoo>
