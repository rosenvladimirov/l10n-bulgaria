<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_bg" model="ir.ui.view">
        <field name="name">account.journal.form.bg</field>
        <field name="model">account.journal</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']" position="after">
                <page name="sequence_settings" string="Sequence Settings">
                    <group>
                        <group>
                            <field name="invoice_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('sale', 'purchase'))]}"/>
                            <field name="refund_inv_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('sale', 'purchase'))]}"/>
                            <field name="ticket_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('sale'))]}"/>
                            <field name="protocol_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('sale', 'purchase'))]}"/>
                        </group>
                        <group>
                            <field name="protocol_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('purchase'))]}"/>
                            <field name="customs_sequence_id"
                                   attrs="{'invisible': [('type', 'not in', ('purchase'))]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
