<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_bg_configuration" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_bg</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Bulgaria" string="Bulgaria locales" data-key="l10n_bg" groups="account.group_account_manager">
                    <h2>Payed modules</h2>
                    <div class="row mt16 o_settings_container" id="l10n_bg_mode_setting">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_extend"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_extend"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_account_financial_report"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_account_financial_report"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_intrastat_product"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_intrastat_product"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_account_voucher"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_account_voucher"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_fleet_waybill"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_fleet_waybill"/>
                            </div>
                        </div>
                    </div>
                    <h2>Additional modules</h2>
                    <div class="row mt16 o_settings_container"
                         id="maintenance_notification_setting">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_vat_period_gensoft"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_vat_period_gensoft"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_l10n_bg_hr_expense"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_l10n_bg_hr_expense"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
