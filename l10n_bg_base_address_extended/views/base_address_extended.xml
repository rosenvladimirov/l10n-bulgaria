                    </tr>
                    <tr name="street_number" style="border:0;"><td style="border:0; width: 20%;"><label for="street_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
