    <record id="view_partner_structured_form" model="ir.ui.view">
        <field name="name">view_partner_structured_bg_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_address_extended.view_partner_structured_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tr[@name='street_number2']" position="before">
                <tr name="street_sector_number" style="border:0;"><td style="border:0; width: 20%;"><label for="street_sector_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                    <td colspan="100" style="border:0;"><field name="street_sector_number" placeholder="Sector Name..." attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                </tr>
            </xpath>
            <xpath expr="//tr[@name='street_number2']" position="after">
                <tr name="street_building_number" style="border:0;"><td style="border:0; width: 20%;"><label for="street_building_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                    <td colspan="100" style="border:0;"><field name="street_building_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                </tr>
                <tr name="street_floor_number" style="border:0;"><td style="border:0; width: 20%;"><label for="street_floor_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                    <td colspan="100" style="border:0;"><field name="street_floor_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                </tr>
                <tr name="street_number2" style="border:0;"><td style="border:0; width: 20%;"><label for="street_number2" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                    <td colspan="100" style="border:0;"><field name="street_number2" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only"/></td>
                </tr>
                <tr name="city" style="border:0;"><td style="border:0; width: 20%;"><label for="city" class="oe_edit_only" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                    <td style="border:0;"><field name="city" placeholder="City" class="oe_edit_only" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                </tr>
                <tr name="state_id" style="border:0;"><td style="border:0; width: 20%;"><label for="state_id" class="oe_edit_only" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                    <td style="border:0;"><field name="state_id" class="oe_edit_only" placeholder="State" options="{&quot;no_open&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/></td>
                    <td style="border:0;"><field name="zip" placeholder="ZIP" class="oe_edit_only" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                </tr>
                <tr name="country_id"><td style="border:0;"><label for="country_id" class="oe_edit_only" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                    <td colspan="100" style="border:0;"><field name="country_id" placeholder="Country" class="o_address_country oe_edit_only" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/></td>
                </tr>
            </xpath>
