<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_vehicle_waybill_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.company_id.lang)" />
                <div class="page">
                    <div class="row">
                        <div class="o_bulgaria_name">
                            <div class="col-xs-12 pull-right">
                                <h4>Waybill NÂ°<span t-field="o.name"/> from <span t-field="o.date_waybill"/></h4>
                            </div>
                        </div>
                    </div>
                    <div class="row" name="customer_address">
                        <div class="col-xs-4 pull-right">
                            <div>
                                <span><strong>Company:</strong></span>
                            </div>
                            <t t-set="company" t-value="o.company_id.partner_id"/>
                            <div t-if="company" name="partner_header">
                                <div t-esc="company"
                                   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                            </div>
                        </div>
                    </div>
                    <div class="row" name="vehicles">
                        <div class="col-xs-4 pull-right">
                            <p>
                                Vehicle: <span t-field="o.vehicle_id"/>. Registration: <span t-esc="o.vehicle_id.license_plate"/>. Fuel consumption in city: <span t-esc="o.vehicle_id.fuel_city_quantity"/> in suburban <span t-esc="o.vehicle_id.fuel_suburban_quantity"/>.
                            </p>
                        </div>
                    </div>
                    <div class="row mt8">
                        <div class="col-xs-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th><strong>Nr.</strong></th>
                                        <th><strong>Roadmap</strong></th>
                                        <th>Odometer start</th>
                                        <th>Odometer stop</th>
                                        <th>Distance</th>
                                        <th>Type</th>
                                        <th>Fuel quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="lines" t-value="o.waybill_lines.filtered(lambda x: x.quantity)"/>
                                    <tr t-foreach="lines" t-as="waybill_line">
                                        <td><span t-esc="waybill_line_index+1"/></td>
                                        <td>
                                            <p>
                                                <span t-esc="', '.join(['%s-%s' % (x.city, x.name) for x in waybill_line.roadmap_ids])"/>
                                            </p>
                                        </td>
                                        <td>
                                            <span t-field="waybill_line.odometer_start"/>
                                        </td>
                                        <td>
                                            <span t-field="waybill_line.odometer_stop"/>
                                        </td>
                                        <td>
                                            <span t-field="waybill_line.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="waybill_line.roadmap_type"/>
                                        </td>
                                        <td>
                                            <span t-field="waybill_line.fuel_quantity"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="clearfix">
                        <div id="total" class="row">
                            <div class="col-xs-8 pull-left">
                            </div>
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <thead>
                                        <th>Type</th>
                                        <th>Fuel consumption</th>
                                        <th>Distance</th>
                                    </thead>
                                    <tbody>
                                        <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                            <td colspan="2"><strong>Start distance</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.odometer_start"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="o._get_fuel_amount_by_group()" t-as="amount_by_group">
                                            <tr style="border-bottom:1px solid #dddddd;">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[2]" />
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[1]" />
                                                </td>
                                            </tr>
                                        </t>
                                        <tr class="border-black">
                                            <td colspan="2"><strong>End destinace</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.odometer"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
         </t>
    </template>
    <template id="report_report_vehicle_waybill">
        <t t-foreach="docs" t-as="o">
            <t t-call="l10n_bg_fleet_waybill.report_vehicle_waybill_document" t-lang="o.company_id.lang"/>
        </t>
    </template>
</odoo>