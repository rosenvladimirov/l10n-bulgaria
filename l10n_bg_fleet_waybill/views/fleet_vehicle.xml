<odoo>

    <record model="ir.ui.view" id="fleet_vehicle_form_view">
        <field name="name">fleet.vehicle.form (in fleet_vehicle_inspection)</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_view_waybills" icon="fa-map-marker"
                        context="{'default_vehicle_id': id, 'default_fuel_type_id': fuel_type_id}">
                <field name="waybill_count" widget="statinfo" string="Waybill"/>
                </button>
            </div>
            <field name="residual_value" position="after">
                <field name="fuel_city_quantity"/>
                <field name="fuel_suburban_quantity"/>
            </field>
        </field>
    </record>

</odoo>
