<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="accepted_delivery_report_document_intrastat" inherit_id="report_theming.accepted_delivery_report">
        <xpath expr="//div[@name='note']" position="before">
            <div class="clearfix">
                <div id="intrastat" class="row">
                    <div class="col-xs-6 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td><strong>H.S. Code</strong></td>
                                <td><strong>GROSS WEIGHT IN KG</strong></td>
                                <td><strong>NET WEIGHT IN KG</strong></td>
                            </tr>
                            <t t-foreach="o.intrastat_ids.get_hs_code().items()" t-as="intrastat_by_group">
                                <tr style="border-bottom:1px solid #dddddd;">
                                    <td>
                                       <span t-esc="intrastat_by_group[0].internal_code"/>
                                    </td>
                                    <td>
                                        <span t-esc="intrastat_by_group[1][0]"/>
                                    </td>
                                    <td>
                                        <span t-esc="intrastat_by_group[1][2]"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>