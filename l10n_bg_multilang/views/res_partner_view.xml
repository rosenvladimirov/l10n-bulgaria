<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <!-- Partner Kanban View -->
        <record model="ir.ui.view" id="res_partner_kanban_ext_view">
            <field name="name">res.partner.ext.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field name="arch" type="xml">
                <field name="display_name" position="after">
                    <field name="display_name_en"/>
                    <field name="display_name_bg"/>
                    <field name="display_lang"/>
                </field>
                <xpath expr="//div[hasclass('o_res_partner_kanban')]" position="attributes">
                    <attribute name="default_order">display_lang</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
