<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">

    <!-- Fiscal positions -->
    <record id="fiscal_position_template_dom" model="account.fiscal.position.template">
        <field name="sequence">10</field>
        <field name="name">Taxable transactions (20%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="country_id" ref="base.bg"/>
    </record>

    <record id="fiscal_position_template_dom_hotels" model="account.fiscal.position.template">
        <field name="sequence">11</field>
        <field name="name">Taxable transactions hotels (9%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="country_id" ref="base.bg"/>
    </record>

    <record id="fiscal_position_template_dom_books" model="account.fiscal.position.template">
        <field name="sequence">11</field>
        <field name="name">Taxable transactions books (9%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="country_id" ref="base.bg"/>
    </record>

    <record id="fiscal_position_template_dom_food" model="account.fiscal.position.template">
        <field name="sequence">11</field>
        <field name="name">Taxable transactions food (9%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="country_id" ref="base.bg"/>
    </record>

    <record id="fiscal_position_bg_private_eu" model="account.fiscal.position.template">
        <field name="name">Taxable transactions EU (20%)</field>
        <field name="sequence">20</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="auto_apply" eval="True"/>
        <field name="country_group_id" ref="base.europe"/>
    </record>

    <record id="fiscal_position_template_in_eu" model="account.fiscal.position.template">
        <field name="sequence">30</field>
        <field name="name">Intra-community deals (0%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="auto_apply" eval="True"/>
        <field name="vat_required" eval="True"/>
        <field name="country_group_id" ref="base.europe"/>
    </record>

    <record id="fiscal_position_template_in_eu_art_21" model="account.fiscal.position.template">
        <field name="sequence">30</field>
        <field name="name">Intra-community deals art.21 (0%)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
        <field name="auto_apply" eval="True"/>
        <field name="vat_required" eval="True"/>
        <field name="country_group_id" ref="base.europe"/>
    </record>

    <record id="fiscal_position_template_out_eu_inv" model="account.fiscal.position.template">
        <field name="sequence">40</field>
        <field name="name">Outside EU chapter III (Invoice)</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
    </record>

    <record id="fiscal_position_template_out_eu" model="account.fiscal.position.template">
        <field name="sequence">50</field>
        <field name="name">Outside EU chapter III</field>
        <field name="chart_template_id" ref="l10n_bg_chart_template"/>
    </record>


    <!-- Fiscal positions [END] -->

    <!-- Sales -->
        <!-- Domestic 9% -->
        <record id="fp_domestic_sale_9_vat_hotels" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_dom_hotels"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_9"/>
        </record>

        <record id="fp_domestic_sale_9_vat_books" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_dom_books"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_books_9"/>
        </record>

        <record id="fp_domestic_sale_9_vat_food" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_dom_books"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_foot_9"/>
        </record>
        <!-- Domestic 9% [END] -->

        <!-- 20% VAT EU -->
        <record id="fp_in_eu_sale_20_vat" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_0_icd"/>
        </record>

        <record id="fp_out_eu_sale_20_vat" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_out_eu"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_0_export"/>
        </record>
        <!-- 20% VAT EU [END] -->

        <!-- 0% Exempt -->
        <record id="fp_in_eu_sale_0_exempt" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_0_exempt"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_0_icd"/>
        </record>
        <!-- 0% Exempt [END] -->

        <!-- Art. 21 -->
        <record id="fp_in_eu_sale_20_vat_art_21" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu_art_21"/>
            <field name="tax_src_id" ref="l10n_bg_sale_vat_20"/>
            <field name="tax_dest_id" ref="l10n_bg_sale_vat_0_21"/>
        </record>
        <!-- Art. 21 [END] -->

    <!-- Sales [END] -->

    <!-- Purchase -->
        <!-- Domestic 9% -->
        <record id="fp_domestic_purchase_9_vat_hotels" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_dom_hotels"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_ftc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_9_ftc"/>
        </record>

        <record id="fp_domestic_purchase_9_vat_books" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_dom_books"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_ptc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_9_otc"/>
        </record>
        <!-- Domestic 9% [END] -->

        <!-- 20% Import Customs Tax Credit -->
        <record id="fp_out_eu_purchase_20_ftc" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_out_eu_inv"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_ftc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_20_inv_ftc"/>
        </record>

        <record id="fp_out_eu_purchase_20_otc" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_out_eu_inv"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_otc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_20_inv_ftc"/>
        </record>
        <!-- 20% Import Customs Tax Credit [END] -->

        <!-- Intra-community deals -->
        <record id="fp_in_eu_purchase_20_otc" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_otc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_0_otc_ica"/>
        </record>

        <record id="fp_in_eu_purchase_20_ftc" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_ftc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_20_ftc_ica"/>
        </record>

        <record id="fp_in_eu_purchase_20_ptc" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_ptc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_20_ptc_ica"/>
        </record>

        <record id="fp_in_eu_purchase_vat_0_art_21" model="account.fiscal.position.tax.template">
            <field name="position_id" ref="fiscal_position_template_in_eu"/>
            <field name="tax_src_id" ref="l10n_bg_purchase_vat_20_otc"/>
            <field name="tax_dest_id" ref="l10n_bg_purchase_vat_0_otc_ica"/>
        </record>
        <!-- Intra-community deals -->
    <!-- Purchase [END] -->
</odoo>
